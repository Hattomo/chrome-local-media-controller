{
    "manifest_version": 3,
    "name": "Hattomo chrome media controller",
    "version": "0.0.1",
    "description": "Chrome video media controller!",
    "permissions": [
        "declarativeContent"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "author": "Hattomo",
    "content_scripts": [
        {
            "matches": [
                "file://*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "32": "icons/favicon-32x32.png",
        "128": "icons/apple-icon-180x180.png"
    }
}